package com.wsingnal.service;

import java.sql.Date;
import java.text.ParseException;
import java.text.SimpleDateFormat;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.wsingnal.model.User;
import com.wsingnal.model.UserDTO;
import com.wsingnal.repository.UserRepository;

@Service
public class UserService {

    @Autowired
    private UserRepository userRepository;

    public void registerUser(UserDTO userDTO) throws ParseException {
        if (userRepository.existsByEmail(userDTO.getEmail())) {
            throw new RuntimeException("이미 사용 중인 이메일입니다.");
        }

        // 비밀번호 암호화 및 기타 처리가 필요함
        User user = new User();
        user.setEmail(userDTO.getEmail());
        user.setPassword(userDTO.getPassword());  // 비밀번호 암호화는 추후에 필요
        user.setNickname(userDTO.getNickname());

        // birthdate를 String에서 Date로 변환
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
        Date birthdate = new Date(sdf.parse(userDTO.getBirthdate()).getTime());
        user.setBirthdate(birthdate);

        // gender를 String에서 Gender Enum으로 변환
        Gender gender = Gender.valueOf(userDTO.getGender().toUpperCase());
        user.setGender(gender);

        user.setPhone(userDTO.getPhone());
        user.setAgree(userDTO.isAgree());

        userRepository.save(user);
    }
}
